<DivideCharsBySentencesNodeBody>
    width: dp(200)
    height: dp(225)
    InputField:
        id: input_text_input
        size_hint: 1, None
        height: dp(10)
        label_text: "input text"
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None
        height: dp(35)
        Label:
            text: 'maximum length'
            halign: "left"
        TextInput:
            id: textinput
            size_hint: None, None
            height: dp(30)
            width: dp(40)
            canvas.before:
                Color:
                    rgba:root.input_text_background
                Line:
                    width: 0.5
                    rectangle: self.x, self.y, self.width, self.height
            halign: "center"
            text: str(root.max_seq_length)
            multiline: False
            background_color: (0,0,0,0)
            on_text_validate: root.set_seq_length()
            on_touch_down: root.change_text_input_color(((3/255, 138/255, 1, 1)))
    MDBoxLayout:
        orientation: 'horizontal'
        height: dp(25)
        height: dp(25)
        size_hint: None, None
        MDFlatButton:
            text: '+'
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            on_press: root.max_seq_length += 1
            on_release:root.change_text_input_color(((1, 1, 1, 1)))
        MDFlatButton:
            text: '-'
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 1
            on_press: root.max_seq_length -= 1
            on_release:root.change_text_input_color(((1, 1, 1, 1)))
    OutputField:
        id: prediction_input_output
        height: dp(20)
        halign:"left"
        size_hint: 1, None
        label_text: 'prediction'
    OutputField:
        id: net_input
        height: dp(20)
        halign:"left"
        size_hint: 1, None
        label_text: "net input"
    OutputField:
        id: net_output
        height: dp(20)
        halign:"left"
        size_hint: 1, None
        label_text: 'net output'
    OutputField:
        id: input_shape
        height:dp(20)
        halign:"left"
        size_hint: 1, None
        label_text: 'input shape'
    OutputField:
        id: output_shape
        height:dp(20)
        halign:"left"
        size_hint: 1, None
        label_text: 'output shape'

