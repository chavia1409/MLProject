#:import utils kivy.utils
#:import style gui.style
<InputField>

    size_hint: 1, None
    height: dp(25)
    Label:
        padding: 5, 0
        height: dp(25)
        size_hint: 1, None
        text: root.label_text
        color: 1,1,1,1
        halign: "left"
        valign: 'bottom'
        text_size: self.size
        italic: root.label_italic
        bold: root.label_bold
    Widget:
        id: dot
        size_hint: None, None
        pos: - dp(20), self.height / 2 - dp(2)
        width: dp(10)
        height: dp(10)
        canvas:
            Color:
                rgb: style.node_body_header_color
            Ellipse:
                pos: self.pos
                size: self.size
            Color:
                rgb: (1,1,1)
            Ellipse:
                pos: self.pos[0] + dp(2), self.pos[1] + dp(2),
                size: self.size[0] - dp(4), self.size[1] - dp(4)
        on_touch_up: root.handle_touch_up(args[0], args[1])
        on_touch_down: root.handle_touch_down(args[0], args[1])