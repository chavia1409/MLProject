<Conv2DContent>
    size_hint: 1, None
    height: dp(100)
    spacing: dp(5)
    NodeBodyTextField:
        label_text: 'filters'
        field_text: root.filters_value
        on_field_text: root.filters_value = args[1]
    Label:
        height: dp(25)
        size_hint: 1, None
        halign: "left"
        valign: 'middle'
        text_size: self.size
        text: 'Kernel Size'
    GridLayout:
        height: dp(25)
        size_hint: 1, None
        cols: 2
        TextInput:
            height: dp(25)
            size_hint: 1, None
            text: root.kernel_size_one
            on_text: root.kernel_size_one = args[1]
        TextInput:
            height: dp(25)
            size_hint: 1, None
            text: root.kernel_size_two
            on_text: root.kernel_size_two = args[1]
    LabeledCheckBox:
        height: dp(25)
        size_hint: 1, None
        is_checked: root.two_kernel_size_values
        on_is_checked: root.two_kernel_size_values = args[1]
        label_text: 'Diffrent Values'
